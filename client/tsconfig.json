{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!**/node_modules/**",
        "!node_modules/**",
        "!dist/**",
        "!**/dist/**",
        "!tmp/**"
    ],
    "files": [
        "typings/browser.d.ts",
        "app/app.component.ts",
        "app/main.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
